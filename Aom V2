        // Initialize localStorage if not exists
        if (!localStorage.getItem('students')) {
            localStorage.setItem('students', JSON.stringify(students));
        } else {
            students = JSON.parse(localStorage.getItem('students'));
        }

        if (!localStorage.getItem('savingHistories')) {
            localStorage.setItem('savingHistories', JSON.stringify(savingHistories));
        }

        // Variables for pagination
        let currentPage = 1;
        let savingsCurrentPage = 1;
        const recordsPerPage = 10;

        // Initialize charts
        function initCharts() {
            // Pie Chart
            const pieCtx = document.getElementById('pieChart').getContext('2d');
            const pieData = {
                labels: ['ม.3/1', 'ม.3/2', 'ม.3/3'],
                datasets: [{
                    data: [8950, 7500, 4400],
                    backgroundColor: [
                        'rgba(16, 185, 129, 0.7)',
                        'rgba(59, 130, 246, 0.7)',
                        'rgba(249, 115, 22, 0.7)'
                    ],
                    borderColor: [
                        'rgba(16, 185, 129, 1)',
                        'rgba(59, 130, 246, 1)',
                        'rgba(249, 115, 22, 1)'
                    ],
                    borderWidth: 1
                }]
            };
            
            new Chart(pieCtx, {
                type: 'pie',
                data: pieData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Bar Chart
            const barCtx = document.getElementById('barChart').getContext('2d');
            const barData = {
                labels: ['ม.ค.', 'ก.พ.', 'มี.ค.', 'เม.ย.', 'พ.ค.', 'มิ.ย.'],
                datasets: [{
                    label: 'ยอดออมรวม (บาท)',
                    data: [5000, 6200, 7500, 6800, 8200, 9000],
                    backgroundColor: 'rgba(16, 185, 129, 0.7)',
                    borderColor: 'rgba(16, 185, 129, 1)',
                    borderWidth: 1
                }]
            };
            
            new Chart(barCtx, {
                type: 'bar',
                data: barData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }

        // Show section
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.add('hidden');
            });
            
            // Show selected section
            document.getElementById(sectionId).classList.remove('hidden');
            
            // Update menu items
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Find the button that triggered this and add active class
            const buttons = document.querySelectorAll('.menu-item');
            for (let i = 0; i < buttons.length; i++) {
                if (buttons[i].getAttribute('onclick').includes(sectionId)) {
                    buttons[i].classList.add('active');
                    break;
                }
            }
            
            // Refresh data display
            if (sectionId === 'dashboard') {
                displayStudents();
            } else if (sectionId === 'savings') {
                displaySavingsStudents();
            }
        }

        // Filter and display students for dashboard
        function displayStudents() {
            const searchInput = document.getElementById('searchInput').value.toLowerCase();
            const classFilter = document.getElementById('classFilter').value;
            
            let filteredStudents = students.filter(student => {
                const matchesSearch = student.name.toLowerCase().includes(searchInput) || 
                                     student.id.toLowerCase().includes(searchInput);
                const matchesClass = classFilter === 'all' || student.classroom === classFilter;
                
                return matchesSearch && matchesClass;
            });
            
            // Pagination
            const totalPages = Math.ceil(filteredStudents.length / recordsPerPage);
            if (currentPage > totalPages && totalPages > 0) {
                currentPage = totalPages;
            }
            
            const start = (currentPage - 1) * recordsPerPage;
            const end = Math.min(start + recordsPerPage, filteredStudents.length);
            const paginatedStudents = filteredStudents.slice(start, end);
            
            // Update table
            const tableBody = document.getElementById('studentTable');
            tableBody.innerHTML = '';
            
            if (paginatedStudents.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = `<td colspan="7" class="py-4 px-4 text-center text-gray-500">ไม่พบข้อมูลนักเรียน</td>`;
                tableBody.appendChild(row);
            } else {
                paginatedStudents.forEach((student, index) => {
                    const row = document.createElement('tr');
                    row.className = index % 2 === 0 ? 'bg-white' : 'bg-gray-50';
                    row.innerHTML = `
                        <td class="py-3 px-4 text-sm border-b">${start + index + 1}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.id}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.name}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.classroom}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.totalSavings.toLocaleString()} บาท</td>
                        <td class="py-3 px-4 text-sm border-b">${student.lastSaving}</td>
                        <td class="py-3 px-4 text-sm border-b">
                            <button onclick="viewSavingHistory('${student.id}')" class="text-blue-600 hover:text-blue-800" title="ดูประวัติการออม">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                </svg>
                            </button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
            }
            
            // Update pagination info
            document.getElementById('startRecord').textContent = filteredStudents.length > 0 ? start + 1 : 0;
            document.getElementById('endRecord').textContent = end;
            document.getElementById('totalRecords').textContent = filteredStudents.length;
            
            // Update pagination buttons
            updatePagination(totalPages, currentPage, 'pageNumbers', 'prevPage', 'nextPage', (page) => {
                currentPage = page;
                displayStudents();
            });
        }

        // Filter and display students for savings
        function displaySavingsStudents() {
            const searchInput = document.getElementById('savingsSearchInput').value.toLowerCase();
            const classFilter = document.getElementById('savingsClassFilter').value;
            
            let filteredStudents = students.filter(student => {
                const matchesSearch = student.name.toLowerCase().includes(searchInput) || 
                                     student.id.toLowerCase().includes(searchInput);
                const matchesClass = classFilter === 'all' || student.classroom === classFilter;
                
                return matchesSearch && matchesClass;
            });
            
            // Pagination
            const totalPages = Math.ceil(filteredStudents.length / recordsPerPage);
            if (savingsCurrentPage > totalPages && totalPages > 0) {
                savingsCurrentPage = totalPages;
            }
            
            const start = (savingsCurrentPage - 1) * recordsPerPage;
            const end = Math.min(start + recordsPerPage, filteredStudents.length);
            const paginatedStudents = filteredStudents.slice(start, end);
            
            // Update table
            const tableBody = document.getElementById('savingsTable');
            tableBody.innerHTML = '';
            
            if (paginatedStudents.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = `<td colspan="6" class="py-4 px-4 text-center text-gray-500">ไม่พบข้อมูลนักเรียน</td>`;
                tableBody.appendChild(row);
            } else {
                paginatedStudents.forEach((student, index) => {
                    const row = document.createElement('tr');
                    row.className = index % 2 === 0 ? 'bg-white' : 'bg-gray-50';
                    row.innerHTML = `
                        <td class="py-3 px-4 text-sm border-b">${start + index + 1}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.id}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.name}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.classroom}</td>
                        <td class="py-3 px-4 text-sm border-b">${student.totalSavings.toLocaleString()} บาท</td>
                        <td class="py-3 px-4 text-center border-b">
                            <div class="flex justify-center space-x-2">
                                <button onclick="showSavingForm('${student.id}')" class="action-btn action-btn-save text-white p-2 rounded-full transition duration-300" title="บันทึกการออม">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                                    </svg>
                                </button>
                                <button onclick="viewSavingHistory('${student.id}')" class="action-btn action-btn-history text-white p-2 rounded-full transition duration-300" title="ประวัติการออม">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </button>
                            </div>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
            }
            
            // Update pagination info
            document.getElementById('savingsStartRecord').textContent = filteredStudents.length > 0 ? start + 1 : 0;
            document.getElementById('savingsEndRecord').textContent = end;
            document.getElementById('savingsTotalRecords').textContent = filteredStudents.length;
            
            // Update pagination buttons
            updatePagination(totalPages, savingsCurrentPage, 'savingsPageNumbers', 'savingsPrevPage', 'savingsNextPage', (page) => {
                savingsCurrentPage = page;
                displaySavingsStudents();
            });
        }

        // Update pagination controls
        function updatePagination(totalPages, currentPage, pageNumbersId, prevPageId, nextPageId, callback) {
            const pageNumbers = document.getElementById(pageNumbersId);
            pageNumbers.innerHTML = '';
            
            // Create page number buttons
            for (let i = 1; i <= totalPages; i++) {
                const pageBtn = document.createElement('button');
                pageBtn.className = `pagination-btn px-3 py-1 rounded border ${i === currentPage ? 'bg-green-600 text-white' : 'border-gray-300 text-gray-700'} text-sm`;
                pageBtn.textContent = i;
                pageBtn.onclick = () => callback(i);
                pageNumbers.appendChild(pageBtn);
            }
            
            // Update prev/next buttons
            const prevPageBtn = document.getElementById(prevPageId);
            const nextPageBtn = document.getElementById(nextPageId);
            
            prevPageBtn.disabled = currentPage === 1;
            prevPageBtn.classList.toggle('disabled', currentPage === 1);
            prevPageBtn.onclick = () => callback(currentPage - 1);
            
            nextPageBtn.disabled = currentPage === totalPages || totalPages === 0;
            nextPageBtn.classList.toggle('disabled', currentPage === totalPages || totalPages === 0);
            nextPageBtn.onclick = () => callback(currentPage + 1);
        }

        // Show saving form with student ID pre-filled
        function showSavingForm(studentId) {
            document.getElementById('studentId').value = studentId;
            document.getElementById('savingAmount').value = '';
            document.getElementById('savingAmount').focus();
        }

        // Add new saving record
        function addSaving() {
            const studentId = document.getElementById('studentId').value;
            const amount = parseInt(document.getElementById('savingAmount').value);
            
            if (!studentId || isNaN(amount) || amount <= 0) {
                alert('กรุณากรอกรหัสนักเรียนและจำนวนเงินให้ถูกต้อง');
                return;
            }
            
            // Find student
            const studentIndex = students.findIndex(s => s.id === studentId);
            if (studentIndex === -1) {
                alert('ไม่พบข้อมูลนักเรียน');
                return;
            }
            
            // Update student data
            students[studentIndex].totalSavings += amount;
            
            // Get current date in Thai format
            const today = new Date();
            const day = today.getDate().toString().padStart(2, '0');
            const month = (today.getMonth() + 1).toString().padStart(2, '0');
            const year = today.getFullYear() + 543; // Convert to Buddhist Era
            const thaiDate = `${day}/${month}/${year}`;
            
            students[studentIndex].lastSaving = thaiDate;
            
            // Add to saving history
            const savingHistories = JSON.parse(localStorage.getItem('savingHistories')) || {};
            if (!savingHistories[studentId]) {
                savingHistories[studentId] = [];
            }
            
            savingHistories[studentId].unshift({
                date: thaiDate,
                amount: amount,
                recordedBy: "ครูอุดร"
            });
            
            // Save to localStorage
            localStorage.setItem('students', JSON.stringify(students));
            localStorage.setItem('savingHistories', JSON.stringify(savingHistories));
            
            // Clear form and refresh display
            document.getElementById('studentId').value = '';
            document.getElementById('savingAmount').value = '';
            displaySavingsStudents();
            
            alert('บันทึกการออมเรียบร้อยแล้ว');
        }

        // View saving history
        function viewSavingHistory(studentId) {
            const student = students.find(s => s.id === studentId);
            if (!student) return;
            
            // Get saving history
            const savingHistories = JSON.parse(localStorage.getItem('savingHistories')) || {};
            const history = savingHistories[studentId] || [];
            
            // Update modal content
            const studentInfo = document.getElementById('studentInfo');
            studentInfo.innerHTML = `
                <div class="flex justify-between">
                    <div>
                        <p class="font-semibold">${student.name}</p>
                        <p class="text-sm text-gray-600">รหัสนักเรียน: ${student.id} | ชั้น: ${student.classroom}</p>
                    </div>
                    <div class="text-right">
                        <p class="font-semibold text-green-600">${student.totalSavings.toLocaleString()} บาท</p>
                        <p class="text-sm text-gray-600">ยอดออมสะสม</p>
                    </div>
                </div>
            `;
            
            const historyTable = document.getElementById('savingHistoryTable');
            historyTable.innerHTML = '';
            
            if (history.length === 0) {
                historyTable.innerHTML = `<tr><td colspan="3" class="py-4 px-4 text-center text-gray-500">ไม่พบประวัติการออม</td></tr>`;
            } else {
                history.forEach((record, index) => {
                    const row = document.createElement('tr');
                    row.className = index % 2 === 0 ? 'bg-white' : 'bg-gray-50';
                    row.innerHTML = `
                        <td class="py-2 px-4 text-sm border-b">${record.date}</td>
                        <td class="py-2 px-4 text-sm border-b">${record.amount.toLocaleString()} บาท</td>
                        <td class="py-2 px-4 text-sm border-b">${record.recordedBy}</td>
                    `;
                    historyTable.appendChild(row);
                });
            }
            
            // Show modal
            document.getElementById('savingHistoryModal').classList.remove('hidden');
        }

        // Close saving history modal
        function closeSavingHistoryModal() {
            document.getElementById('savingHistoryModal').classList.add('hidden');
        }

        // Generate PDF
        function generatePDF() {
            alert('กำลังสร้างไฟล์ PDF กรุณารอสักครู่...');
            
            // In a real application, this would generate a PDF based on the current data
            setTimeout(() => {
                alert('สร้างไฟล์ PDF เรียบร้อยแล้ว');
            }, 1000);
        }

