        function downloadPDFExample() {
            alert('กำลังดาวน์โหลดตัวอย่าง PDF กรุณารอสักครู่...');
            
            // In a real application, this would download the example PDF
            setTimeout(() => {
                alert('ดาวน์โหลดตัวอย่าง PDF เรียบร้อยแล้ว');
            }, 1000);
        }

        // Initialize the application
        window.onload = function() {
            initCharts();
            displayStudents();
            
            // Set up event listeners for search and filter
            document.getElementById('searchInput').addEventListener('input', displayStudents);
            document.getElementById('classFilter').addEventListener('change', displayStudents);
            document.getElementById('savingsSearchInput').addEventListener('input', displaySavingsStudents);
            document.getElementById('savingsClassFilter').addEventListener('change', displaySavingsStudents);
        };
